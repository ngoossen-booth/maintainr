<div >
  <h5>
    Edit User Account
  </h5>

  <div>
    <form action="/modify_user" method="post">
      <div>
        <label for="email_box">Email</label>
        <input id="email_box" name="query_email" value="<%= @current_user.email %>">
      </div>
      <div>
        <label for="home_id_box">Home</label>
        <input id="home_id_box" name="query_home_id" value="<%= @current_user.home_id %>">
      </div>
      <div>
        <label for="equipment_id_box">Equipment</label>
        <input id="equipment_id_box" name="query_equipment_id" value="<%= @current_user.equipment_id %>">
      </div>
      <div>
        <label for="households_count_box">Households count</label>
        <input id="households_count_box" name="query_households_count" value="<%= @current_user.households_count %>">
      </div>

      <div>
        <label for="password_box">Password</label>
        <input id="password_box" name="query_password" placeholder="Choose a password..." type="password">
      </div>
    
      <div>
        <label for="password_confirmation_box">Password Confirmation</label>
        <input id="password_confirmation_box" name="query_password_confirmation" placeholder="Confirm your password..." type="password">
      </div>

      <button>
        Update account
      </button>
    </form>
  </div>
</div>
