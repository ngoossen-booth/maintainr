<div>
  <div>
    <h1>
      Your households
    </h1>
  </div>
</div>

<hr>
<div>
  <div>
    <table>
      <tr>

        <th>
          Address
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @list_of_households.each do |a_household| %>
      <tr>
        <td>
          <%= a_household.address %>
        </td>
        <td>
          <%= time_ago_in_words(a_household.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(a_household.updated_at) %> ago
        </td>

        <td>
          <a href="/households/<%= a_household.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>

<hr>
<div>
  <div>
    <h2>
      Add a new household
    </h2>

    <form action="/insert_household" method="post">
      <div>
        <label for="address_box">
          Address
        </label>

        <input type="text" id="address_box" name="query_address">
      </div>

      <button>
        Create household
      </button>
    </form>
  </div>
</div>
<hr>
